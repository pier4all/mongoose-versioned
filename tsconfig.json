{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2020",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": [
    "source"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  },
  "ts-node": {
    "files": true,
  }
}
